// Merge two sorted list problem in leetcode

class Solution {
    public ListNode mergeTwoLists(ListNode list1, ListNode list2) {
        
        if(list1 == null){
            return list2;
        }
        if(list2==null){
            return list1;
        }
        if(list1.val > list2.val){
            ListNode temp = list1;
            list1 = list2;
            list2 = temp;
        }

        ListNode res = list1;
        while(list1 != null && list2 != null){
            ListNode head = null;
            while(list1!=null && list1.val <= list2.val){
                head = list1;
                list1 = list1.next;
            }
            head.next = list2;

            ListNode t = list1;
            list1 = list2;
            list2 = t;
        }
        return res;

    }
}
